    <com.example.mahjong.CircularTextView
        android:id="@+id/circularFlowersTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@color/common_google_signin_btn_text_dark_default"
        android:gravity="center"
        android:padding="3dp"
        android:text="0"
        app:layout_constraintBottom_toTopOf="@+id/flower_pile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.849"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/flower_pile"
        android:layout_width="26dp"
        android:layout_height="50dp"
        android:contentDescription="@string/tile_for_player_at_hand_position_0"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.35"
        app:layout_constraintHorizontal_bias="0.85"
        app:srcCompat="@drawable/play" />

    <TextView
        android:id="@+id/num_flowers_text_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/common_google_signin_btn_text_dark_default"
        android:text="flowers pile"
        app:layout_constraintTop_toBottomOf="@+id/flower_pile"
        app:layout_constraintBottom_toTopOf="@+id/p_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintVertical_bias="0.02" />

    <ImageButton
        android:id="@+id/rules_at_multiplayer_game"
        style="@style/RulebookFeatures"
        android:contentDescription="@string/rulebook_link"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.97"
        app:layout_constraintTop_toTopOf="parent" />

