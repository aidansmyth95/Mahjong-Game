<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wood_table"
    android:keepScreenOn="true"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/P0_input"
        android:layout_width="86dp"
        android:layout_height="62dp"
        android:layout_marginEnd="320dp"
        android:layout_marginRight="320dp"
        android:layout_marginBottom="44dp"
        android:background="#D7FFFFFF"
        android:gravity="center"
        android:hint="@string/p0_input_here"
        android:importantForAutofill="no"
        android:inputType="textNoSuggestions|number|text"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/P1_input"
        android:layout_width="86dp"
        android:layout_height="62dp"
        android:layout_marginEnd="216dp"
        android:layout_marginRight="216dp"
        android:layout_marginBottom="44dp"
        android:background="#D7FFFFFF"
        android:gravity="center"
        android:hint="@string/p1_input_here"
        android:importantForAutofill="no"
        android:inputType="textNoSuggestions|number|text"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/P2_input"
        android:layout_width="86dp"
        android:layout_height="62dp"
        android:layout_marginEnd="104dp"
        android:layout_marginRight="104dp"
        android:layout_marginBottom="44dp"
        android:background="#D7FFFFFF"
        android:gravity="center"
        android:hint="@string/p2_input_here"
        android:importantForAutofill="no"
        android:inputType="textNoSuggestions|number|text"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent" />


    <EditText
        android:id="@+id/P3_input"
        android:layout_width="86dp"
        android:layout_height="62dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="44dp"
        android:background="#D7FFFFFF"
        android:gravity="center"
        android:hint="@string/p3_input_here"
        android:importantForAutofill="no"
        android:inputType="textNoSuggestions|number|text"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewOut"
        android:layout_width="284dp"
        android:layout_height="348dp"
        android:background="#6DFFFFFF"
        android:duplicateParentState="false"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbarStyle="insideInset"
        android:scrollbars="vertical"
        android:text="@string/hello_mahjong"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:gravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.194" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="160dp"
        android:layout_marginRight="160dp"
        android:layout_marginBottom="120dp"
        android:background="#009688"
        android:onClick="sendMessage"
        android:text="@string/button_send"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>