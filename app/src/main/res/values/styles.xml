<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="RulebookFeatures">
        android:id="@+id/rules_at_welcome_activity"
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="srcCompat">@drawable/game_rues_icon</item>
    </style>

    <style name="HiddenTileFeatures">
        <item name="android:layout_width">26dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="srcCompat">@drawable/play</item>
        <item name="layout_constraintVertical_bias">0.175</item>
        <item name="android:padding">2dp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <!-- <item name="android:background">@drawable/border_tiles</item> -->
    </style>

    <style name="RevealedTileFeatures">
        <item name="android:layout_width">26dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="srcCompat">@drawable/play</item>
        <item name="layout_constraintVertical_bias">0.05</item>
        <item name="android:padding">2dp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

</resources>
